{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",              
    "moduleResolution": "bundler",      
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": ["src", "bin"]
}
